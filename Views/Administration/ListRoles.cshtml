@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Role";
}

<h1>All Roles</h1>
@if (Model.Any())
{
    <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary" style="width:auto;">
        Create Role
    </a>

    foreach (var role in Model)
    {

        <div class="card mb-3">
            <div class="card-header">
                Role ID: @role.Id
            </div>
            <div class="card-body">
                <h5 class="card-title"> @role.Name </h5>
            </div>
            <div class="card-footer">
                <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No Roles Created Yet
        </div>
        <div class="card-body">
            <h5 class="card-tiles">
                Use the button below to create the role
            </h5>
            <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary" style="width:auto;">
                Create Role
            </a>
        </div>
    </div>
}